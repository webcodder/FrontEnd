.bindthree_wrap navigator{
    width: 100%;
    height: 102rpx;
    background: #fff;
    margin-bottom: 16rpx;
    overflow: hidden;
}

.cont_wrap {
  width: 720rpx;
  margin: 0 auto;
  height: 102rpx;
  line-height: 102rpx;
}

.cont_left {
    float: left;
    position: relative;
}

.cont_left_pic{
  width:50rpx;
  height:50rpx;
  position:absolute;
  top:42%;
  transform:translateY(-50%);
}

.cont_left text{
    float: left;
    margin-left: 80rpx;
}

.cont_right {
    float: right;
}

.cont_right text{
  font-size: 32rpx;
}

.bindthree_wrap text.green {
    position: relative;
    color: #999999;
    right: 40rpx;
    display: block;
}

.bindthree_wrap text.green::after {
    content: '';
    width: 25rpx;
    height: 25rpx;
    background: url(http://jxc-admin.oss-cn-hangzhou.aliyuncs.com/images/icon-wdzk.png) top no-repeat;
    background-size: 100%;
    position: absolute;
    right: -38rpx;
    top: 50%;
    transform: translateY(-50%);
}