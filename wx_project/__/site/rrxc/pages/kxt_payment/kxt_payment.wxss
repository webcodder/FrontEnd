    width: 100%;
    height: 188rpx;
    background: #fff;
    margin-bottom: 24rpx;
    overflow: hidden;
}

.kxt_paymt_tl {
    float: left;
    margin-top: 24rpx;
}

.kxt_paymt_tl text{
  display: block;
  margin-bottom: 15rpx;
}

.kxt_paymt_tr {
  float: right;
  margin-top: 38rpx;
}

