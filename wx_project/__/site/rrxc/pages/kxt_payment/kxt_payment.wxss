/* payment_body */
.modrct_title{
  height: 85rpx;
  line-height:85rpx;
}

.modrct_title text{
  font-size: 30rpx;
}

.modrct_cot {
    margin: 0 24rpx;
}

.payment_way {
    line-height: 100rpx;
    font-size: 28rpx;
}

.modrct_btn_r{
  display: block;
  float: right;
  margin-right: 50rpx; 
  position: relative;
}

.modrct_btn_r::after{
  content: '';
  width: 30rpx;
  height: 30rpx;
  background: url(http://jxc-admin.oss-cn-hangzhou.aliyuncs.com/images/icon-wdzk.png) top no-repeat;
  left: 130rpx;
  position: absolute;
  background-size: 100%;
  top: 48%;
  transform: translateY(-50%);
}

.payment_way_l{
    margin-left: 50rpx;
    position: relative;
}

.payment_way_l::before{
    content: '';
    width: 48rpx;
    height: 48rpx;
    background: url(http://jxc-admin.oss-cn-hangzhou.aliyuncs.com/images/icon-wxzf.png) top no-repeat;
    left: -50rpx;
    position: absolute;
    background-size: 100%;
    top: 48%;
    transform: translateY(-50%);
}

.payment_way_r{
  width: 35rpx;
  height: 35rpx;
  float: right;
  margin-top: 10rpx;
}

