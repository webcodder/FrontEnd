/* payment_body */
.payment_top {
    width: 100%;
    height: 165rpx;
    background: #fff;
    margin-bottom: 24rpx;
    overflow: hidden;
}

.paytpl{
  float: left;
  margin-top: 45rpx;
}

.paytpl_pic, .paytpl_txt{
  float: left;
}

.paytpl_pic{
    width:70rpx;
    height: 70rpx;
    overflow: hidden;
    margin-right: 22rpx;
}

.paytpl_txt text{
  display: block;
  font-size: 32rpx;
}

.paytpr{
  float: right;
  width: 50rpx;
  height: 50rpx;
  margin-top: 50rpx;
}

.modrct_title{
  height: 85rpx;
  line-height:85rpx;
}

.modrct_title_pic{
  width: 60rpx;
  height: 60rpx;
  overflow: hidden;
  margin-top: 18rpx;
  margin-right: 20rpx;
}

.modrct_title_pic, .modrct_title text{
  float: left;
  
}

.modrct_title text{
  font-size: 30rpx;
}

.modrct_cot {
    margin: 0 24rpx;
}

 .modrct_body {
  background: #f1f1f1;
  min-height: 238rpx;
  border-top: solid 1px transparent;
  overflow: hidden;
} 

.modrct_body_pic {
    width: 120px;
    height: 188rpx;
    overflow: hidden;
    margin-top: 24rpx;
    float: left;
}

.modrct_body_txt {
    float: left;
    margin-top: 35rpx;
    margin-left: 22rpx;
    width: 385rpx;
}

.payment_count {
    border-bottom: solid 1px #e2e2e2;
    height: 100rpx;
    line-height: 100rpx;
    overflow: hidden;
    font-size: 28rpx;
}

.modrct_btn {
    height: 100rpx;
    line-height: 100rpx;
    font-size: 28rpx;
}

.payment_way {
    line-height: 100rpx;
    font-size: 28rpx;
}

.modrct_body_txt > view{
  margin-bottom: 20rpx;
}

.modrct_body_txt .tittle text{
  font-size: 30rpx;
  font-weight: bold;
}

.modrct_body_txt .lab text{
  margin-right: 20rpx;
}

.modrct_body_txt .price_l{
  float: left;
}

.modrct_body_txt .price_l .nor{
  font-size: 40rpx;
  color: #f5560f;
}

.modrct_body_txt .price_l text{
  margin-right: 20rpx;
}

.modrct_body_txt .price_l .old{
  font-size: 24rpx;
  text-decoration: line-through;
}

.modrct_body_txt .price_r{
  float: right;
  margin-top: 22rpx;
}

.pytut_l{
  float: left;
}

.payment_count .count{
  position: absolute;
  right: 0;
  border: solid 1px #ccc;
  height: 60rpx;
  line-height: 60rpx;
  top: 50%;
  transform: translateY(-50%);
}

.payment_count .count text{
  display: inline-block;
  text-align: center;
}

.count_down {
    border-right: solid 1px #ccc;
}

.count_down, .count_up {
    width: 60rpx;
    height: 60rpx;
}

.count_num {
    min-width: 76rpx;
}

.count_up {
    border-left: solid 1px #ccc;
}

.modrct_btn_r{
  display: block;
  float: right;
  margin-right: 50rpx; 
  position: relative;
}

.modrct_btn_r::after{
  content: '';
  width: 30rpx;
  height: 30rpx;
  background: url(http://jxc-admin.oss-cn-hangzhou.aliyuncs.com/images/icon-wdzk.png) top no-repeat;
  left: 130rpx;
  position: absolute;
  background-size: 100%;
  top: 48%;
  transform: translateY(-50%);
}

.payment_way_l{
    margin-left: 50rpx;
    position: relative;
}

.payment_way_l::before{
    content: '';
    width: 48rpx;
    height: 48rpx;
    background: url(http://jxc-admin.oss-cn-hangzhou.aliyuncs.com/images/icon-wxzf.png) top no-repeat;
    left: -50rpx;
    position: absolute;
    background-size: 100%;
    top: 48%;
    transform: translateY(-50%);
}

.payment_way_r{
  width: 35rpx;
  height: 35rpx;
  float: right;
  margin-top: 10rpx;
}
/* /payment_body */

